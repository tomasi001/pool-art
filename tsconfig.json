{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version
    "module": "ESNext", // Use ES modules
    "moduleResolution": "node", // Resolve modules using Node.js conventions
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"], // Include libraries for DOM and ES6 features
    "sourceMap": true, // Generate source maps for debugging
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "baseUrl": "./", // Base URL for module resolution
    "paths": {
      // Path mapping for module imports
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"]
    },
    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
    "strictNullChecks": true, // Enable strict null checks
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "experimentalDecorators": true, // If you're using decorators
    "emitDecoratorMetadata": true, // Needed when using decorators
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "skipLibCheck": true // Skip type checking of all declaration files (*.d.ts)
  },
  "include": ["src/**/*"], // Include all TypeScript files in the 'src' directory
  "exclude": ["node_modules"] // Exclude the 'node_modules' directory
}

